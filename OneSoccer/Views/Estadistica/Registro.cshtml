using OneSoccer.core.Entidades
@model OneSoccer.core.Entidades.Estadistica


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Registro de estadistica</h1>
            </div>

        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Registro
                    </div>
                    <div class="panel-body">

                        <form action="@Url.Action("Guardar","Estadistica")">
                            <input type="hidden" class="form-control" name="id" value="@Model.id">
                            <div class="form-group">
                                <label>Partidos:</label>
                                <input class="form-control" name="Partidos" value="@if (Model.id != 0) { @Model.partidos}" />
                            </div>
                            <div class="form-group">
                                <label>Minutos Jugados:</label>
                                <input class="form-control" name="Minutos Jugados" value="@if (Model.id != 0) { @Model.MinutosJugados}" />
                            </div>
                            <div class="form-group">
                                <label>Goles:</label>
                                <input class="form-control" name="Goles" value="@if (Model.id != 0) { @Model.goles}" />
                            </div>
                            <div class="form-group">
                                <label>Asistencias:</label>
                                <input class="form-control" name="Asistencias" value="@if (Model.id != 0) { @Model.asistencias}" />
                            </div>
                            <div class="form-group">
                                <label>Tarjeta Amarillas:</label>
                                <input class="form-control" name="Tarjeta Amarillas" value="@if (Model.id != 0) { @Model.tarjetaAma}" />
                            </div>
                            <div class="form-group">
                                <label>Tarjeta Rojas:</label>
                                <input class="form-control" name="Tarjeta Rojas" value="@if (Model.id != 0) { @Model.tarjetasRojas}" />
                            </div>


                            <button class="btn btn-success" type="submit">Guardar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

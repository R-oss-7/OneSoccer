using OneSoccer.core.Entidades
@model OneSoccer.core.Entidades.Jugador


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Registro de jugadores</h1>
            </div>

        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Registro
                    </div>
                    <div class="panel-body">

                        <form action="@Url.Action("Guardar","Jugadores")">
                            <input type="hidden" class="form-control" name="id" value="@Model.id">
                            <div class="form-group">
                                <label>Nombre del jugador:</label>
                                <input class="form-control" name="Nombre" value="@if (Model.id != 0) { @Model.nombre}" />
                            </div>
                            <div class="form-group">
                                <label>Apelldio:</label>
                                <input class="form-control" name="Apellido" value="@if (Model.id != 0) { @Model.apellido}" />
                            </div>
                            <div class="form-group">
                                <label>Posicion:</label>
                                <input class="form-control" name="Posicion" value="@if (Model.id != 0) { @Model.posicion}" />
                            </div>
                            <div class="form-group">
                                <label>Numero:</label>
                                <input class="form-control" name="numero" value="@if (Model.id != 0) { @Model.numero}" />
                            </div>
                            <div class="form-group">
                                <label>Nacionalidad:</label>
                                <input class="form-control" name="nacionalidad" value="@if (Model.id != 0) { @Model.nacionalidad}" />
                            </div>
                            <div class="form-group">
                                <label>Edad:</label>
                                <input class="form-control" name="edad" value="@if (Model.id != 0) { @Model.edad}" />
                            </div>


                            <button class="btn btn-success" type="submit">Guardar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@using OneSoccer.core.Entidades
@model List<Liga>

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Ligas</h1>
            </div>

        </div>


        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panle-body">
                        <a href="@Url.Action("Registro","Liga", new { id = 0})" class="btn btn-primary">Agregar nuevo</a>



                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Liga</th>
                                        <th>Pais</th>
                                        <th>Acciones</th>
                                        <th>Equipos</th>
                                        <th>Arbitros</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Liga l in Model)
                                    {

                                        <tr>
                                            <td>
                                                @l.nombre
                                            </td>
                                            <td>
                                                @l.pais
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Registro","Liga", new { id = l.id})" class="btn btn-primary btn-circle"><i class="fa fa-pencil"></i></a>
                                                <a onclick="eliminar(@l.id)" class="btn btn-danger btn-circle"><i class="fa fa-trash-o"></i></a>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("VerEquipos", "Equipo")/@l.id"> Ver Equipos</a>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("VerArbitros", "Arbitro")/@l.id"> Ver Arbitros</a>
                                            </td>


                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>

                    </div>

                </div>

            </div>

        </div>

    </div>

</div>
<script src="~/Content/js/oneSoccer/liga.js"></script>